{

  "name": "Prevent Reload",
  "version": "0",
  "description": "Show browser width",
  "background": {
                 "persistent": false,
                 "scripts": ["background.js"]
                 },
  "permissions": [
  "activeTab",
  "tabs"
  ],
  "manifest_version": 2,
  "browser_action": {
    "name": "Manipulate DOM",
    "icons": ["icon.png"],
    "default_icon": "icon.png"
  },
  "content_scripts": [ {
    "js": [ "jquery.min.js" ],
    "css": ["customStyles.css"],
    "matches": [ "http://*/*", "https://*/*"]
  }]
}
